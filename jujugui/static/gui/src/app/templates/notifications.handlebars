<span role="button" tabindex="0" class="menu-link link">
    <span id="notify-indicator" {{#if count}}class="populated"{{/if}}>{{ count }}</span>
</span>
<span class="dropdown">
    <header>
        {{count}} notifications
    </header>
    {{#if notifications}}
        <ul>
            {{#notifications}}
                <li id="{{clientId}}" class="notice">
                    <h4>{{title}}</h4>
                    {{message}}
                    <small data-timestamp="{{timestamp}}">
                        {{humanizeTime timestamp}}
                    </small>
                </li>
            {{/notifications}}
        </ul>
    {{else}}
        <p>No notifications</p>
    {{/if}}
    <footer></footer>
</span>

<div class="unplaced-unit">
  {{>more-menu}}
  <span class="unit-icon">
    <img src="{{unit.icon}}" alt="{{unit.displayName}}">
  </span>
  <span class="title">
    {{ unit.displayName }}
  </span>
  <div class="machines">
    <select>
      <option value="" selected disabled class="hidden default">
        Move to&hellip;
      </option>
      <option value="new" class="default">New machine</option>
    </select>
  </div>
  {{>container-type-form}}
  {{>constraints-form}}
  <div class="actions">
    <span class="cancel secondary-action">Cancel</span> |
    <span class="create move primary-action">Move</span>
  </div>
</div>

<div class="token">
  {{>more-menu}}
  <span class="title">
    {{ displayName }}{{#if isStateServer}} - State service{{/if}}
    <span class="removed">
      will be destroyed once you have committed your changes
    </span>
    <span class="token-uncommitted">&deg;</span>
  </span>
  <span class="details">
    {{#if noHardware}}
      Hardware details not available
    {{else}}
      {{#if formattedHardware.cpuCores}}
        {{ formattedHardware.cpuCores }}x{{ formattedHardware.cpuPower }}GHz,
      {{/if}}
      {{#if formattedHardware.mem}}
        {{ formattedHardware.mem }}GB,
      {{/if}}
      {{#if formattedHardware.disk}}
        {{ formattedHardware.disk }}GB
      {{/if}}
    {{/if}}
  </span>
  <span class="service-icons"></span>
  <div class="drop">
    <span>Add to machine {{ displayName }}</span>
  </div>
</div>

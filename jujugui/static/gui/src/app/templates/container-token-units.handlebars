{{#units}}
  <li class="unit {{#unless agent_state }}uncommitted{{/unless}} {{#if deleted }}deleted{{/if}} {{#if fade}}fade{{/if}} {{#if hide}}hide{{/if}}"
      data-id="{{id}}">
    {{>more-menu}}
    <img src="{{icon}}" alt="{{service}}" title="{{displayName}}"/>
    <span class="name">
      {{displayName}}
      <span class="removed">
        will be destroyed once you have committed your changes
      </span>
      <span class="unit-uncommitted">&deg;</span>
    </span>
  </li>
{{/units}}

<div class="view-container">
<h2>Upgrade Services</h2>
<div class="view-content">
  <div class="settings-wrapper">
    <div class="toggle">
      {{#services}}
        <div class="upgrade-services-toggle">
          <div class="toggle-switch toggle-{{id}}">
              <input type="checkbox"
                     name="{{id}}"
                     class="hidden-checkbox {{id}}-toggle config-field"
                     id="input-{{id}}">
              <label for="input-{{id}}" class="light">
                <div class="handle"></div>
              </label>
          </div>
          <label class="textvalue" for="input-{{id}}">{{id}}</label>
        </div>
      {{/services}}
    </div>
  </div>
</div>
<div class="controls">
  <button class="cancel">Cancel</button>
  <button class="confirm">Upgrade</button>
</div>
